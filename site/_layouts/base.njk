<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% if resultName %}{{ resultName }} | {{ pathName }} | {% elif title %}{{ title }} | {% endif %}{{ site.title }}</title>
  <meta name="description" content="{{ resultSummary | default(description) | default(site.description) }}">

  <!-- Open Graph -->
  <meta property="og:title" content="{{ resultName | default(ogTitle) | default(title) | default(site.title) }}">
  <meta property="og:description" content="{{ shareHook | default(ogDescription) | default(description) | default(site.description) }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  {% if ogImage %}
  <meta property="og:image" content="{{ site.url }}{{ ogImage }}">
  {% endif %}

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ resultName | default(ogTitle) | default(title) | default(site.title) }}">
  <meta name="twitter:description" content="{{ shareHook | default(ogDescription) | default(description) | default(site.description) }}">

  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <main>
    {{ content | safe }}
  </main>
  <script src="/js/quiz.js"></script>
</body>
</html>
